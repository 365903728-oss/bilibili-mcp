{
  "name": "@xzxzzx/bilibili-mcp",
  "version": "1.0.2",
  "description": "Bilibili MCP tool for video and comment summarization",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bilibili-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "semantic-release"
  },
  "config": {
    "bilibili": {
      "rateLimitMs": 500,
      "requestTimeoutMs": 10000,
      "cacheSize": 100
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "bilibili",
    "video",
    "comments",
    "subtitle",
    "chinese",
    "b站",
    "视频总结",
    "评论总结"
  ],
  "author": "xzxzzx",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/365903728-oss/bilibili-mcp.git"
  },
  "homepage": "https://github.com/365903728-oss/bilibili-mcp#readme",
  "bugs": {
    "url": "https://github.com/365903728-oss/bilibili-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^17.2.4",
    "quick-lru": "^7.3.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@types/node": "^22.19.8",
    "semantic-release": "^25.0.3",
    "typescript": "^5.7.2"
  }
}
